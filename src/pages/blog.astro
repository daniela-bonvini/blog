---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
const pageTitle = "Posts";
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<Layout pageTitle={pageTitle}>
  <div class="gif">
    <img width="300" height="259" alt="RaccoonLaptopGif" src="/blog.webp" />
  </div>
  <h2>Blog</h2>
  <ul role="list" class="link-card-grid">
    {
      allPosts.map((post) => (
        <Card url={post.url} title={post.frontmatter.title} body={post.frontmatter.description} image={post.frontmatter?.image} />
      ))
    }
  </ul>
</Layout>
